{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">

            <div class="float-right">
                <button type="submit" form="form-coinpayments-account" data-toggle="tooltip"
                        title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>

                <a href="{{ url_cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid" id="coinpayments-page">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <form action="{{ url_action }}" method="post" enctype="multipart/form-data" id="form-coinpayments-account"
              class="form-horizontal">
            <div class="card">

                <div class="card-header">
                    <h3>{{ text_credentials }}</h3>
                </div>

                <div class="card-body">

                    <div class="form-group required row" id="input-client-id-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-client-id">
                            {{ entry_client_id }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_coinpayments_client_id" id="input-client-id"
                                   value="{{ payment_coinpayments_client_id }}" placeholder=""
                                   class="form-control"/>
                            <small class="form-text text-muted">{{ help_client_id }}</small>

                            {% if error_client_id %}
                                <div class="text-danger">{{ error_client_id }}</div>
                            {% endif %}

                            {% if error_invalid_credentials %}
                                <div class="text-danger">{{ error_invalid_credentials }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group required row">
                        <label class="col-sm-2 control-label col-form-label" for="input-client-secret">
                            {{ entry_client_secret }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_coinpayments_client_secret" id="input-client-secret"
                                   value="{{ payment_coinpayments_client_secret }}" placeholder=""
                                   class="form-control"/>
                            <small class="form-text text-muted">{{ help_client_secret }}</small>

                            {% if error_client_secret %}
                                <div class="text-danger">{{ error_client_secret }}</div>
                            {% endif %}
                            {% if payment_coinpayments_webhooks and error_invalid_credentials %}
                                <div class="text-danger">{{ error_invalid_credentials }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group row" id="input-webhooks-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-webhooks">
                            {{ entry_webhooks }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_coinpayments_webhooks" id="input-webhooks" class="form-control">
                                {% if payment_coinpayments_webhooks %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                            <small class="form-text text-muted">{{ help_webhooks }}</small>
                        </div>
                    </div>

                    <input type="hidden" name="action" value="save">

                </div>
            </div>


            <div class="card">
                <div class="card-header">
                    <h3>{{ text_advanced }}</h3>
                </div>

                <div class="card-body">
                    <div class="form-group row" id="input-cancelled-status-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-cancelled-status">
                            {{ entry_cancelled_status }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_coinpayments_cancelled_status" class="form-control"
                                    id="input-cancelled-status">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_coinpayments_cancelled_status %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group row" id="input-completed-status-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-completed-status">
                            {{ entry_completed_status }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_coinpayments_completed_status" class="form-control"
                                    id="input-completed-status">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_coinpayments_completed_status %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group row" id="input-pending-status-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-pending-status">
                            {{ entry_pending_status }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_coinpayments_pending_status" class="form-control"
                                    id="input-pending-status">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_coinpayments_pending_status %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group row" id="input-geo-zone-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-geo-zone">
                            {{ entry_geo_zone }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_coinpayments_geo_zone_id" id="input-geo-zone"
                                    class="form-control">
                                <option value="0">{{ text_all_zones }}</option>
                                {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == payment_coinpayments_geo_zone_id %}
                                        <option value="{{ geo_zone.geo_zone_id }}"
                                                selected="selected">{{ geo_zone.name }}</option>
                                    {% else %}
                                        <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row" id="input-sort-order-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-sort-order">
                            {{ entry_sort_order }}
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_coinpayments_sort_order"
                                   value="{{ payment_coinpayments_sort_order }}"
                                   placeholder="{{ entry_sort_order }}"
                                   id="input-sort-order" class="form-control"/>
                            <small class="form-text text-muted">{{ help_sort_order }}</small>
                        </div>
                    </div>
                    <div class="form-group row" id="input-status-wrap">
                        <label class="col-sm-2 control-label col-form-label" for="input-status">
                            {{ entry_status }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_coinpayments_status" id="input-status" class="form-control">
                                {% if payment_coinpayments_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                            {% if error_status %}
                                <div class="text-danger">{{ error_status }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{ footer }}