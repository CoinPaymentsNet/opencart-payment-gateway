{% if error_coinpayments %}
    <div class="alert alert-danger alert-dismissible">
        <i class="fa fa-exclamation-circle"></i> {{ error_coinpayments }}
    </div>
{% else %}

    <form id="payment_coinpayments_submit" name="payment_coinpayments_submit" action="{{ action }}" method="GET">
        Pay with Bitcoin, Litecoin, or other altcoins via  <a href="https://alpha.coinpayments.net/" target="_blank" title="CoinPayments.net">CoinPayments.net</a>
        {% for key, value in form_params %}
            <input type="hidden" name="{{ key }}" value="{{ value }}"/>
        {% endfor %}
    </form>
    <div class="buttons">
        <div class="pull-right">
            <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary"/>
        </div>
    </div>
    <script type="text/javascript"><!--
        $('#button-confirm').bind('click', function () {
            $('#payment_coinpayments_submit').submit();
        });
        //--></script>

{% endif %}
