{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-coinpayments-account" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>

  <div class="container-fluid" id="coinpayments-page">
    <form action="{{ save }}" method="post" id="form-coinpayments-account" data-oc-toggle="ajax">
      <div class="card mb-5">
        <div class="card-header">{{ text_credentials }}</div>
        <div class="card-body">
          <div class="row mb-3">
            <label for="input-client-id" class="col-sm-2 col-form-label">{{ entry_client_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_coinpayments_client_id"
                     value="{{ payment_coinpayments_client_id }}"
                     placeholder=""
                     id="input-client-id" class="form-control"/>
              <small class="form-text text-muted">{{ help_client_id }}</small>
              <div class="text-danger" id="error-client-id"></div>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-client-secret" class="col-sm-2 col-form-label">{{ entry_client_secret }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_coinpayments_client_secret"
                     value="{{ payment_coinpayments_client_secret }}"
                     placeholder=""
                     id="input-client-secret" class="form-control"/>
              <small class="form-text text-muted">{{ help_client_secret }}</small>
              <div class="text-danger" id="error-client-secret"></div>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-webhooks" class="col-sm-2 col-form-label">{{ entry_webhooks }}</label>
            <div class="col-sm-10">
              <div class="form-check form-switch form-switch-lg">
                <input type="hidden" name="payment_coinpayments_webhooks" value="0"/>
                <input type="checkbox" name="payment_coinpayments_webhooks" value="1" id="input-webhooks" class="form-check-input"{% if payment_coinpayments_webhooks %} checked{% endif %}/>
              </div>
              <small class="form-text text-muted">{{ help_webhooks }}</small>
              <div class="text-danger" id="error-webhooks"></div>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">{{ text_advanced }}</div>
        <div class="card-body">
          <div class="row mb-3">
            <label for="input-cancelled-status" class="col-sm-2 col-form-label">{{ entry_cancelled_status }}</label>
            <div class="col-sm-10">
              <select name="payment_coinpayments_cancelled_status" id="input-cancelled-status" class="form-select">
                {% for order_status in order_statuses %}
                  <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_coinpayments_cancelled_status %} selected{% endif %}>{{ order_status.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-completed-status" class="col-sm-2 col-form-label">{{ entry_completed_status }}</label>
            <div class="col-sm-10">
              <select name="payment_coinpayments_completed_status" id="input-completed-status" class="form-select">
                {% for order_status in order_statuses %}
                  <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_coinpayments_completed_status %} selected{% endif %}>{{ order_status.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-pending-status" class="col-sm-2 col-form-label">{{ entry_pending_status }}</label>
            <div class="col-sm-10">
              <select name="payment_coinpayments_pending_status" id="input-pending-status" class="form-select">
                {% for order_status in order_statuses %}
                  <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_coinpayments_pending_status %} selected{% endif %}>{{ order_status.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-geo-zone" class="col-sm-2 col-form-label">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_coinpayments_geo_zone_id" id="input-geo-zone" class="form-select">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                  <option value="{{ geo_zone.geo_zone_id }}"{% if geo_zone.geo_zone_id == payment_coinpayments_geo_zone_id %} selected{% endif %}>{{ geo_zone.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_coinpayments_sort_order"
                     value="{{ payment_coinpayments_sort_order }}"
                     placeholder="{{ entry_sort_order }}"
                     id="input-sort-order" class="form-control"/>
            </div>
          </div>

          <div class="row mb-3">
            <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
            <div class="col-sm-10">
              <div class="form-check form-switch form-switch-lg">
                <input type="hidden" name="payment_coinpayments_status" value="0"/>
                <input type="checkbox" name="payment_coinpayments_status" value="1" id="input-status" class="form-check-input"{% if payment_coinpayments_status %} checked{% endif %}/>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
{{ footer }}
